<% content_for :page_title do %>
  <%= Spree.t(:blog_categories) %>
<% end %>

<% content_for :page_actions do %>
  <li id="new_blog_category_link">
    <%= button_link_to 'New Blog Category', new_admin_blog_category_url, { :remote => true, :icon => 'icon-plus', 'data-update' => 'new_blog_category', :id => 'new_blog_category_link' } %>
  </li>
<% end %>

<div id="new_blog_category"></div>

<% if @blog_categories.any? %>
<table class="index" id='listing_blog_categories' data-hook>
  <colgroup>
    <col style="width: 40%">
    <col style="width: 45%">
    <col style="width: 15%">
  </colgroup>
  <thead>
    <tr data-hook="listing_blog_categories_header">
      <th><%= Spree.t(:title) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @blog_categories.each do |blog_category| %>
      <tr id="<%= spree_dom_id blog_category %>" data-hook="listing_blog_categories_row" class="<%= cycle('odd', 'even')%>">
        <td style="padding-left:1em"><%= blog_category.title %></td>
        <td class="actions">
          <%= link_to_edit(blog_category, :no_text => true) %>
          <%= link_to_delete(blog_category, :no_text => true) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <div class="alpha twelve columns no-objects-found">
    <%= Spree.t(:no_resource_found, resource: I18n.t(:other, scope: 'activerecord.models.spree/soil_type')) %>,
    <%= link_to Spree.t(:add_one), spree.new_admin_blog_category_path %>!
  </div>
<% end %>